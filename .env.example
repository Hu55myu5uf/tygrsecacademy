# Environment Configuration for TygrSecAcademy
# Copy this file to .env and fill in your values

# Application
APP_NAME=TygrSecAcademy
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars

# Database
DATABASE_URL=postgresql://tygrsec:tygrsec_password@localhost:5432/tygrsecacademy
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_COST_FACTOR=12

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# AI Configuration
AI_CONTEXT_MAX_TOKENS=16000
AI_CACHE_TTL_SECONDS=3600
AI_RATE_LIMIT_PER_USER_PER_HOUR=50

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,md,txt,py,js,html,css

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@tygrsecacademy.com
SMTP_FROM_NAME=TygrSecAcademy

# Frontend URL
FRONTEND_URL=http://localhost:3000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# Lab Environment
LAB_DOCKER_NETWORK=tygrsec-lab-network
LAB_SESSION_TIMEOUT_MINUTES=60
LAB_MAX_CONCURRENT_PER_USER=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tygrsecacademy.log

# Security
SECURE_COOKIES=False  # Set to True in production with HTTPS
HTTPS_REDIRECT=False  # Set to True in production

# Admin Defaults (used by seed scripts)
# ADMIN_EMAIL=admin@tygrsecacademy.com
# ADMIN_PASSWORD=ChangeThisSecurePassword123!
